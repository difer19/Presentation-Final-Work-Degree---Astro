---
import Layout from '../layouts/Layout.astro';
import ButtonNextDownload from '../components/ButtonNextDownload.astro';
import ButtonText from '../components/ButtonText.astro';
import Agenda from '../components/Agenda.astro';
import { Divider } from "@nextui-org/react";


const projectTitle = "Implementación y verificación formal \
					de un algoritmo paralelo basado en Minmax \
					aplicado a un juego como caso de estudio \
					usando álgebra de procesos concurrentes \
					y mCRL2 "

const name = "Diego Fernando Escobar Bastidas"
---


<Layout title="Project">
    <main>
		<h1 class="mx-4 text-2xl sm:mx-8 sm:text-3xl md:m-20 md:text-5xl w-full sm:w-3/4 md:w-2/3">{projectTitle}</h1>
		<h2 class="mx-4 text-lg sm:mx-8 sm:my-8 sm:text-2xl md:m-20 md:w-2/3">{name}</h2>
		
		<div class="m-4 md:m-16 w-full md:w-2/3 flex flex-col items-center justify-between md:flex-row">
		  	<div class="flex flex-col items-center md:flex-row md:space-x-4">
				<a href="https://www.udenar.edu.co/" class="mb-4 md:mb-0">
					<img src="/public/images/udenar.png" class="h-16 w-36 sm:h-16 sm:w-48" alt="Udenar" />
				</a>
				<a href="https://www.udenar.edu.co/" class="mb-4 md:mb-0">
					<img src="/public/images/UdenarLogo2.png" class="h-16 sm:h-20" alt="Galeras.NET" />
				</a>
			</div>
			<ButtonNextDownload></ButtonNextDownload>
		</div>
		
		<Divider className='my-12'></Divider>
		<h1 class="mx-4 text-2xl sm:mx-8 sm:text-3xl md:mx-20 md:text-5xl w-full sm:w-3/4 md:w-2/3">Agenda</h1>
		<Agenda></Agenda>
		
		<div class="relative m-4 md:m-16 md:w-2/3 my">
			  <ButtonText></ButtonText>
		</div>
		
		<Divider></Divider>
		
    </main>
</Layout>